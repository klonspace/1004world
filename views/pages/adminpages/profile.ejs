<div id="subPageHeader">
        Your profile
</div>
<div id="profileInfo">
        <h3>Username</h3>
        <div class="editable">
                <span class="preview">
                        <span class="content" data-valtype="username"><%= info.userInfo.username %></span> <input
                                type="button" value="edit" class="editButton">
                </span>

        </div>

        <h3>Full Name</h3>

        <div class="editable">
                <span class="preview">
                        <span class="content" data-valtype="fullName"><%= info.userInfo.fullName %></span> <input
                                type="button" value="edit" class="editButton">
                </span>
        </div>
        <h3>Email</h3>

        <div class="editable">
                <span class="preview">
                        <span class="content" data-valtype="email"><%= info.userInfo.email %></span> <input
                                type="button" value="edit" class="editButton">
                </span>
        </div>
        <h3>Password</h3>
        <div>
                <table>
                        <tr>
                                <td>
                                        Current Password :
                                </td>
                                <td>
                                        <input type="password" id="oldPassword">
                                </td>
                        </tr>
                        <tr>
                                <td>
                                        New Password :
                                </td>
                                <td>
                                        <input type="password" id="newPassword">
                                </td>
                        </tr>
                        <tr>
                                <td>
                                        New Password Confirmation :
                                </td>
                                <td>
                                        <input type="password" id="newPasswordConf">
                                </td>
                        </tr>
                        <tr>
                                        <td>
                                                        <input type="button" id="saveNewPass" value="change password">
                                        </td>
                                        <td>
                                                
                                        </td>
                                </tr>
                </table>
        </div>
        <h3>Stream Key</h3>
        <%= info.streamKey %>
</div>
<script>
        initEditableProfile()
</script>